#!/usr/bin/env bash

## Copyright (C) 2020-2023 Aditya Shakya <adi1090x@gmail.com>
##
## Script To Manage Speaker Volume For Archcraft (in Wayland).

iDIR="$HOME/.config/hypr/mako/icons"
notify_cmd='notify-send -h string:x-canonical-private-synchronous:sys-notify-volume -u low'

# Get Volume
get_volume() {
    echo "`pamixer --get-volume | cut -d' ' -f1`"
}

# Get icons
get_icon() {
    current="$(get_volume)"
    if [[ "$current" -eq "0" ]]; then
        icon="$iDIR/volume-mute.png"
    elif [[ ("$current" -ge "0") && ("$current" -le "30") ]]; then
        icon="$iDIR/volume-low.png"
    elif [[ ("$current" -ge "30") && ("$current" -le "60") ]]; then
        icon="$iDIR/volume-mid.png"
    elif [[ ("$current" -ge "60") && ("$current" -le "100") ]]; then
        icon="$iDIR/volume-high.png"
    fi
}

# Notify
notify_user() {
    ${notify_cmd} -i "$icon" "Volume : $(get_volume)%"
}

# Increase Volume
inc_volume() {
    [[ `pamixer --get-mute` == 1 ]] && pamixer --unmute
    pamixer -ui 2 && get_icon && notify_user
}

# Decrease Volume
dec_volume() {
    [[ `pamixer --get-mute` == 1 ]] && pamixer --unmute
    pamixer -ud 2 && get_icon && notify_user
}

# Toggle Mute
toggle_mute() {
    if [[ `pamixer --get-mute` == 'false' ]]; then
        pamixer --toggle-mute && ${notify_cmd} -i "$iDIR/volume-mute.png" "Mute"
    else
        pamixer --toggle-mute && get_icon && ${notify_cmd} -i "$icon" "Unmute"
    fi
}

# Toggle Mic
toggle_mic() {
    ID="`pactl get-source-mute @DEFAULT_SOURCE@ | grep yes | cut -f1`"
    if [[ -n $ID ]]; then
        pactl set-source-mute @DEFAULT_SOURCE@ toggle && ${notify_cmd} -i "$iDIR/microphone.png" "Microphone Switched ON"
    else
        pactl set-source-mute @DEFAULT_SOURCE@ toggle && ${notify_cmd} -i "$iDIR/microphone-mute.png" "Microphone Switched OFF"
    fi
}

# Execute accordingly
if [[ -x `which pamixer` ]]; then
    if [[ "$1" == "--get" ]]; then
        get_volume
    elif [[ "$1" == "--inc" ]]; then
        inc_volume
    elif [[ "$1" == "--dec" ]]; then
        dec_volume
    elif [[ "$1" == "--toggle" ]]; then
        toggle_mute
    elif [[ "$1" == "--toggle-mic" ]]; then
        toggle_mic
    else
        echo $(get_volume)%
    fi
else
    ${notify_cmd} "'pamixer' is not installed."
fi
