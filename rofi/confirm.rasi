/* Confirm Dialog */ 

@import "colors/nord.rasi"

* {
    background-color:       @bg;
    text-color:             @fg;
	font:				 	"BlexMono NFM 10";
}

window {
    width:      			225px;
    padding:    			25px;
    border:					1px;
    border-radius:          0px;
    border-color:           @bg1;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:			#ff4c30;
}
